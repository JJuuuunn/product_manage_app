<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssg.todo.mapper.TodoMapper">

    <select id="getTime" resultType="string">
        select now()
    </select>

    <select id="selectOne" resultType="com.ssg.todo.domain.TodoVO">
        select *
        from tbl_todo
        where tno = #{tno}
    </select>

    <delete id="deleteTestData">
        delete
        from tbl_todo
        where title like '%test%'
    </delete>

    <insert id="insert" parameterType="com.ssg.todo.domain.TodoVO" useGeneratedKeys="true" keyProperty="tno">
        insert into tbl_todo(title, dueDate, writer)
        values (#{title}, #{dueDate}, #{writer})
    </insert>

    <select id="selectAll" resultType="com.ssg.todo.domain.TodoVO">
        select *
        from tbl_todo
        order by tno desc
    </select>

    <update id="update" parameterType="com.ssg.todo.domain.TodoVO">
        update tbl_todo
        set title    = #{title},
            dueDate  = #{dueDate},
            finished = #{finished}
        where tno = #{tno}
    </update>

    <delete id="deleteByTno">
        delete
        from tbl_todo
        where tno = #{tno}
    </delete>

    <select id="selectList" resultType="com.ssg.todo.domain.TodoVO">
        select * from tbl_todo
<!--        <foreach collection="types" item="type">-->
<!--            <if test="type == 't'.toString()">-->
<!--                title like concat('%', #{keyword}, '%')-->
<!--            </if>-->
<!--            <if test="type == 'w'.toString()">-->
<!--                writer like concat('%', #{keyword}, '%')-->
<!--            </if>-->
<!--#         </foreach>-->
        <where>
            <if test="types != null and types.length > 0">
                <foreach collection="types" item="type" open="(" close=") " separator=" OR ">
                    <if test="type == 't'.toString()">
                        title like concat('%', #{keyword}, '%')
                    </if>
                    <if test="type == 'w'.toString()">
                        writer like concat('%', #{keyword}, '%')
                    </if>
                </foreach>
            </if>
            <if test="finished">
                <trim prefix="and">
                    finished = 1
                </trim>
            </if>
            <if test="from != null and to != null">
                <trim prefix="and">
                    dueDate between #{from} and #{to}
                </trim>
            </if>
        </where>
        order by tno desc limit #{skip}, #{size}
    </select>

    <select id="getCount" resultType="int">
        select count(tno)
        from tbl_todo
    </select>
</mapper>